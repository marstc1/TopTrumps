@model IEnumerable<TopTrumps.Models.Domain.Card>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h3>@Model.FirstOrDefault().Pack.PackName</h3>

@foreach (var item in Model) {
    string path = string.Format("/Images/Cards/{0}/{1}.jpg", item.PackId, item.Name.ToLower());
    <img src="@path" style="height: 50%;" />
    <table>
    <tr>
        <td>
            <center>@Html.DisplayFor(modelItem => item.CardType)</center>
        </td>
    </tr>
    <tr>
        <td>
            <center>@Html.DisplayFor(modelItem => item.Name)</center>
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(modelItem => item.Strength)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Strength)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(modelItem => item.Skill)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Skill)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(modelItem => item.MagicalForce)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MagicalForce)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(modelItem => item.Weapons)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weapons)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(modelItem => item.Power)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Power)
        </td>
    </tr>
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
    </table>
}